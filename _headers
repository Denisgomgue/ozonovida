# Security Headers for OZONO VIDA
/*
  # Content Security Policy - Previene ataques XSS
  Content-Security-Policy: default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https://images.unsplash.com https://via.placeholder.com; connect-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com; frame-src 'self' https://www.tiktok.com; media-src 'self'
  
  # Previene clickjacking
  X-Frame-Options: DENY
  
  # Previene MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Fuerza HTTPS en navegadores compatibles
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Previene que el navegador envíe referrer
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Controla el acceso a APIs del navegador
  Permissions-Policy: geolocation=(self), microphone=(), camera=(), payment=(), usb=()
  
  # Protección XSS adicional
  X-XSS-Protection: 1; mode=block
  
  # Cache control para assets estáticos
  Cache-Control: public, max-age=31536000

# CSS Files - Cache por 1 año
/css/*
  Cache-Control: public, max-age=31536000, immutable
  
# JavaScript Files - Cache por 1 año
/js/*
  Cache-Control: public, max-age=31536000, immutable
  
# Images - Cache por 6 meses
/assets/images/*
  Cache-Control: public, max-age=15552000
  
# Fonts - Cache por 1 año
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# HTML Files - Cache por 1 hora
*.html
  Cache-Control: public, max-age=3600
